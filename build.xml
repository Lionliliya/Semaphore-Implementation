<?xml version="1.0" encoding = "ISO-8859-1"?>
<project name = "SemaphoreImplementation" basedir = ".">

    <property name = "src" location = "src/main/java"/>
    <property name = "build" location = "build"/>
    <property name="dist" location="dist"/>

    <target name="init">
        <mkdir dir = "${build}"/>
        <mkdir dir = "${dist}"/>
    </target>

    <target name="compile" depends = "init">
        <javac srcdir = "${src}" destdir = "${build}" source = "1.8" target = "1.8"/>
    </target>

    <target name="dist" depends="compile">
        <jar destfile = "${dist}/semaphoreAnt.jar">
            <fileset dir = "${build}"/>
            <manifest>
               <attribute name="Main-Class" value = "ua.kiev.semaphore.Bootstrap"/>
            </manifest>
        </jar>
    </target>

    <target name="clean">
        <delete dir="${build}"/>
        <delete dir="${dist}"/>
    </target>

</project>